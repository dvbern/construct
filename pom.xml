<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.dvbern.lib</groupId>
	<artifactId>dvbern-lib-construct</artifactId>
	<packaging>jar</packaging>
	<name>dvbern-lib-construct</name>
	<version>1.2.2-SNAPSHOT</version>
	<description>Instanzieren von Java Objekten aus einer XML Struktur heraus</description>
	<parent>
		<groupId>ch.dvbern.maven</groupId>
		<artifactId>parent</artifactId>
		<version>1.2</version>
	</parent>
	<scm>
		<connection>
			scm:svn:http://svn/repos/dvbern/lib/construct/trunk
		</connection>
	</scm>
	<issueManagement>
		<system>jira</system>
		<url>http://jira/jira/browse/CONSTRUCT</url>
	</issueManagement>
	<ciManagement>
		<system>continuum</system>
		<url>http://continuum/continuum</url>
		<notifiers>
			<notifier>
				<type>mail</type>
				<sendOnError>true</sendOnError>
				<sendOnFailure>true</sendOnFailure>
				<sendOnSuccess>false</sendOnSuccess>
				<sendOnWarning>false</sendOnWarning>
				<configuration>
					<address>thomas.meister@dvbern.ch</address>
				</configuration>
			</notifier>
		</notifiers> 
	</ciManagement>
	<url>
		http://wiki/wiki/Wiki.jsp?page=DVBernLibConstruct
	</url>
	<reporting>
		<plugins>
			<!-- changes.xml -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>changes-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>changelog-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
	<developers>
		<developer>
			<id>meth</id>
			<email>thomas.meister@dvbern.ch</email>
			<name>Thomas Meister</name>
			<organization>DV Bern AG</organization>
		</developer>
	</developers>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.7</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<properties>
		<project.jdk.source.version>1.4</project.jdk.source.version>
		<project.jdk.target.version>1.4</project.jdk.target.version>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
	</properties>
</project>